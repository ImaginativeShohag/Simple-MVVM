<resources>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/flat_awesome_green_1</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">5000</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/flat_grey_dark_1</item>
        <item name="colorPrimaryVariant">@color/flat_grey_dark_2</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/flat_green_1</item>
        <item name="colorSecondaryVariant">@color/flat_green_2</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:colorBackground">@color/container_default_background</item>
        <item name="colorOnBackground">@color/flat_grey_dark_2</item>

        <item name="colorSurface">#eeeeee</item>
        <item name="colorOnSurface">@color/flat_grey_dark_2</item>

        <item name="colorError">@color/flat_red_1</item>
        <item name="colorOnError">@color/flat_red_2</item>

        <item name="android:fontFamily">@font/titillium_web</item>
    </style>

    <style name="AppTheme.M3" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/titillium_web</item>
        <item name="materialCardViewStyle">@style/Widget.Material3.CardView.Filled</item>
    </style>

    <style name="Theme.Splash" parent="Theme.MaterialComponents.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>

        <item name="android:fontFamily">@font/titillium_web</item>
    </style>

    <!-- Dialog Styles -->
    <style name="AppTheme.AlertDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/titillium_web</item>
    </style>

    <!-- Month Picker - NumberPicker Styles -->
    <style name="NumberPickerDefault">
        <item name="colorControlNormal">@color/colorAccent</item>
    </style>

    <!-- Button Styles -->
    <style name="Button.Default" parent="Widget.MaterialComponents.Button" />

    <style name="Button.Home" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconSize">32dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="iconTint">?attr/colorOnSurface</item>
    </style>

    <!-- Shapes -->
    <style name="CircularShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>
