<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".views.fragments.demo_home.DemoHomeFragment">

    <data>

        <variable
            name="viewModel"
            type="org.imaginativeworld.simplemvvm.views.fragments.demo_home.DemoHomeViewModel" />

    </data>

<!--    <androidx.coordinatorlayout.widget.CoordinatorLayout-->
<!--        android:id="@+id/container"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:text="@string/app_name"
                android:textColor="@color/flat_grey_dark_2"
                android:textSize="28sp"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_user"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/title_users"
                app:icon="@drawable/ic_account_box_24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_post"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/title_posts"
                app:icon="@drawable/ic_chat_24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_post_paged"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/title_posts_paged"
                app:icon="@drawable/ic_chat_24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_custom_snackbar"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Custom Snackbar"
                app:icon="@drawable/ic_perm_device_information_24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_dark_mode"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Toggle Theme"
                app:icon="@drawable/ic_perm_device_information_24dp" />

        </LinearLayout>

<!--    </androidx.coordinatorlayout.widget.CoordinatorLayout>-->

</layout>
