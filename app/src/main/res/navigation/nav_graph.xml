<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="org.imaginativeworld.simplemvvm.views.fragments.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_userFragment"
            app:destination="@id/userFragment" />
        <action
            android:id="@+id/action_homeFragment_to_postFragment"
            app:destination="@id/postFragment" />
        <action
            android:id="@+id/action_homeFragment_to_postPagedFragment"
            app:destination="@id/postPagedFragment" />
    </fragment>
    <fragment
        android:id="@+id/postFragment"
        android:name="org.imaginativeworld.simplemvvm.views.fragments.post.PostFragment"
        android:label="fragment_post"
        tools:layout="@layout/fragment_post" />
    <fragment
        android:id="@+id/userFragment"
        android:name="org.imaginativeworld.simplemvvm.views.fragments.user.UserFragment"
        android:label="fragment_user"
        tools:layout="@layout/fragment_user" />
    <fragment
        android:id="@+id/postPagedFragment"
        android:name="org.imaginativeworld.simplemvvm.views.fragments.postpaged.PostPagedFragment"
        android:label="fragment_post_paged"
        tools:layout="@layout/fragment_post_paged" />
</navigation>